{
  "formatter": {
    "enabled": true,
    "indentSize": 2,
    "lineWidth": 100,
    "ignore": ["**/dist/*"]
  },
  "linter": {
    "enabled": true,
    "ignore": ["**/dist/*"],
    "rules": {
      "recommended": true,
      "correctness": {
        "noRestrictedGlobals": "error",
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "useFragmentSyntax": "error",
        "noImplicitBoolean": "off",
        "useBlockStatements": "off"
      },
      "nursery": {
        "noBannedTypes": "error",
        "noConstAssign": "error",
        "noExplicitAny": "error",
        "noInvalidConstructorSuper": "error",
        "useCamelCase": "error",
        "useExhaustiveDependencies": "error",
        "useFlatMap": "error",
        "useValidForDirection": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}